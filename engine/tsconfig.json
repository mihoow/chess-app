{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noEmit": true, // nothing gets compiled from this package
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vitest"] // so tests and node have types
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
